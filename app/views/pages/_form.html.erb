<fieldset>
	
	<div>
		<%= f.label :title %>
		<div class="shadow_wrap">
			<%= f.text_field :title, :class => 'required' %>
		</div>
	</div>

	<div class="check_box_wrap">
		<%= f.check_box :show_in_nav %>
		<%= f.label :show_in_nav, nil, :class => 'small_label' %>
	</div>
	
	<div>
		<%= f.label :description, nil, :class => 'block_label' %>
		<div class="shadow_wrap">
			<%= f.text_area :description, :class => 'small_textarea' %>
		</div>
	</div>
	
	<div>
		<%= f.label :content, nil, :class => 'block_label' %>
		<div class="shadow_wrap">
			<%= f.text_area :content, :class => 'wysiwyg' %>
		</div>
	</div>
</fieldset>

<%= render :partial => 'shared/assoc_form',
	:locals => { :model_field => f, :model => @page, :fields_title => 'Blocks', :enabled_models => @page.enabled_blocks,
	:disabled_models => reject_blocks_enabled_on_this(@page, @blocks) } %>