<div id="type-one-top-bar">
  
	 <div id="type-two-top-bar-head">
	   <form action="post">
		   <ul>
			 		 <li id="sort">Sort by: <a href="">Rating</a> / <a href="">Views</a></li>
					 <li id="search">Search Tips by keyword <input type="text" /> <a href="">GO</a></li>
					 <li><a href="/tips/new" class="search-options openDiv" rel="add_new_tip">Add your tips</a></li>
			 </ul>
		 </form>
	 </div>
	 
    <div id="add_new_tip" class="hidden">
      <% form_tag create_tip_path do %>
        <fieldset>
          <legend>Share Your Self Storage Tips</legend>
          
          <p>
            <%= label_tag 'Title', nil, :class => 'hide_if_js' %>
            <%= text_field_tag 'post[title]', nil, :id => 'tip_title', :class => 'hintable', :title => 'Title' %>
          </p>
          
          <p>
            <%= label_tag 'Content', nil, :class => 'hide_if_js' %>
            <%= text_area_tag 'post[content]', nil, :id => 'tip_content', :class => 'hintable', :title => 'Content' %>
          </p>
          
          <p>
            <%= label_tag 'Tags', nil, :class => 'hide_if_js' %>
            <%= text_field_tag 'post[tag_list]', nil, :class => 'hintable', :title => 'Tags' %>
          </p>
          
          <div class="submit">
            <%= submit_tag 'Submit' %>
          </div>
          
        </fieldset>
      <% end %>
    </div>
	 
	 <% data.each do |tip| %>
	   <div class="blog-lock">
  		 <h3><%= link_to tip.name_or_title, post_path(tip) %></h3>
  		 <p>
  		  <%= tip.content_teaser %>
  		 </p>
  		 
        <ul>
          <li>Rating&nbsp;&nbsp;&nbsp;</li>
          <li class="five-star"><%= ratings_for tip, :dimension => :usefulness, :small => true %></li>
          <li class="share">Share: 
            <a href="" class="socialmediathree"><span class="hidden">Another</span></a>
            <a href="" class="socialmediatwo"><span class="hidden">Another</span></a>
            <a href="" class="socialmediaone"><span class="hidden">Another</span></a>
            <a href="" class="twitter"><span class="hidden">Twitter</span></a>
            <a href="" class="facebook"><span class="hidden">Facebook</span></a>
            <a href="" class="delicious"><span class="hidden">Delicious</span></a>
          </li>
          <li class="tags">Tags: <%= tip.display_tag_list_with_links %></li>
        </ul>
        
  	</div>
  <% end %>
  
  <%= render :partial => 'views/paginate', :locals => { :data => data } %>
		
  <div class="clear"></div>	 
</div>