<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<%= stylesheet_link_tag 'common' %>
		<%= stylesheet_link_tag @theme_css %>
		
		<meta charset="utf-8">
		<title><%= yield :title %></title>

		<%= site_meta_tags %>
		<script src="http://maps.google.com/maps?file=api&v=2&key=<%= GOOGLE_APPLICATION_ID %>" type="text/javascript"></script>
    

		<link rel="shortcut icon" type="image/x-ico" href="/favicon.ico" />
		
		<!--[if IE]>
			<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		
		<!--[if lte IE 7]>
			<link rel="stylesheet" type="text/css" href="stylesheets/ie.css" />
			<script type="text/javascript" src="javascripts/IE8.js"></script>
		<![endif]-->
	</head>
	<body id="<%= controller_name %>_controller" class="<%= action_name %>_action <%= page_name %>">
		<% if current_user %>
  		<div id="admin_menu">
  		  <%= render :partial => 'menus/menu' %>
  		</div>
		<% end %>
		
		<div id="wrapper">

	    <div id="header">
	      <div class="inner_wrap">
	        
	        <%= yield :header %>
	        
  	    </div>
  	    <div id="header_btm"></div>
	    </div>  <!-- /#header -->
	    
	    <div id="nav" class="region block_center inner_wrap">
        <div class="right">
          <ul class="sortable">
            <%= render :partial => 'menus/nav', :collection => @nav_pages %>
          </ul>
        </div>
      </div>
	    
	    <div id="garage_door_wrap">
	      <div class="content_wrap">
	        
    	    <div class="wrap content_round_top"></div>
    	    <div id="inner_wrap" class="wrap content_round_inner">
    	       <div class="content_inner">
    	         
    	         <% if yield(:sidebar) %>
     						<div id="sidebar" class="region">

     							<%= yield :sidebar %>
                  
     						</div> <!-- /#sidebar -->
     					<% end %>

     					<% if yield(:column_5) %>
     				    <div id="column_5" class="region<%= shrink_on_locator_page %>">
     				      
                  <%= yield :column_5 %>
                  
     				    </div> <!-- /#column_5 -->
     				  <% end %>
              <br class="clear" />
              
     					<div id="body" class="region uncollapse">
     					  
     						<%= yield %>
     					   <!-- /the stuff -->
     					   
     						<div id="content_bottom" class="region">
     						  
     							<%= yield :content_bottom %>
     							
     						</div>
     					</div> <!-- /#body -->
    	        
    	      </div>
    	    </div>
    	    <div class="wrap content_round_btm"></div>
    	    
    	    <div id="column_6" class="region wrap">
					  
						<%= yield :column_6 %>
						
					</div>
    	    
    	  </div> <!-- /.content_wrap -->
    	  <div id="handle" class="block_center"></div>
    	  
	    </div> <!-- /#garage_door_wrap -->
	    
	  </div> <!-- /#wrapper -->
	  
	  
	  <div id="footer">
	    
	    <%= yield :footer %>
	    
    </div> <!-- /#footer -->
	  
	  <%= javascript_include_tag 'ckeditor/ckeditor.js', 'jquery.all', @plugins %>
  	<%= @widgets_js.map { |js| javascript_include_tag js } %>
  	<%= javascript_include_tag 'application', 'plugins/greyresults' %>
	
	</body>
</html>