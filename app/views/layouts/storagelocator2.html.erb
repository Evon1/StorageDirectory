<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<%= stylesheet_link_tag 'common' %>
		<%= stylesheet_link_tag @theme_css %>
		
		<meta charset="utf-8">
		<title><%= yield :title %></title>

		<meta name="description" content="" />
		<meta name="keywords" content="" />

		<link rel="shortcut icon" type="image/x-ico" href="images/icons/favicon.ico" />
		
		<!--[if IE]>
			<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		
		<!--[if lte IE 7]>
			<link rel="stylesheet" type="text/css" href="stylesheets/ie.css" />
			<script type="text/javascript" src="javascripts/IE8.js"></script>
		<![endif]-->
	</head>
	<body id="<%= controller_name %>_controller" class="<%= action_name %>_action">
		<% if current_user %>
  		<div id="admin_menu">
  		  <%= render :partial => 'menus/menu' %>
  		</div>
		<% end %>
		
		<div id="wrapper" class="wrap">
		  <div id="header" class="wrap">
        <div id="green_buttons" class="right">

        </div>

        <a href="/"><img src="/images/ui/storagedirectory/us-self-storage-locator-logo.png" alt="US Self Storage Directory" /></a>
      </div> <!-- /#header -->
		  
	    <div id="content">
	      <div id="nav" class="region round_bar"><span class="left"></span>
	        <ul class="sortable">
					  <%= render :partial => 'menus/nav', :collection => @nav_pages %>
					</ul>
				<span class="right"></span></div>
	      
	      <div class="content uncollapse">
	        <% if yield(:sidebar) %>
						<div id="sidebar" class="region">

							<%= yield :sidebar %>
              
						</div> <!-- /#sidebar -->
					<% end %>
					
					<% if yield(:column_5) %>
				    <div id="column_5" class="region uncollapse">

              <%= yield :column_5 %>
              
				    </div>
				  <% end %>
				  
					<div id="body" class="region">
						<%= yield %>
					   <!-- /the stuff -->
						<div id="content_bottom" class="region">
							<%= yield :content_bottom %>
							
						</div>
					</div> <!-- /#body -->
	      </div> <!-- /.content -->
	    </div> <!-- /#content -->
	    
	  </div> <!-- /#wrapper -->
	  
	  <div id="footer" class="region wrap">
      <%= yield :footer %>
    </div> <!-- /#footer -->
	  
	  <%= javascript_include_tag 'ckeditor/ckeditor.js', 'jquery.all', @plugins %>
  	<%= @widgets_js.map { |js| javascript_include_tag js } %>
  	<%= javascript_include_tag 'application' %>
	
	</body>
</html>