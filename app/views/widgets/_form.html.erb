<fieldset>
	<legend><%= action_name.capitalize %> Widget</legend>
	
	<div>
		<%= f.label :title %>
		<div class="shadow_wrap">
			<%= f.text_field :title, :class => 'required' %>
		</div>
	</div>

	<div>
		<%= f.label :content %>
		<div class="shadow_wrap">
			<%= f.text_area :content, :class => 'small_textarea' %>
		</div>
	</div>
	
</fieldset>

<fieldset>
	<legend>Gallery</legend>
	<% unless @galleries.blank? %>
	
		<div class="field_wrap">
			<% @galleries.each do |gallery| %>
				<div class="row_checkable">

					<% f.fields_for :widget_gallery, widget_gallery_object(gallery) do |widget_gallery_field| %>
						<div class="left">
							<%= widget_gallery_field.check_box :gallery_id, { :class => 'unique_checkbox' }, gallery.id %>
						</div>

						<div class="left">
							<p class="title"><%=h gallery.title %></p>
						</div>

						<div class="text-right buttons">
							<a>buttons</a>
						</div>
					<% end %>

				</div>
			<% end %>
		</div>
		
	<% end %>
</fieldset>